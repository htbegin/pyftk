		<cell text="O" action="send_key(O)" width_weight="1"/>
		<cell text="P" action="send_key(P)" width_weight="1"/>
	</row>
	<row cols="9" height_weight="10">
		<cell text="A" action="send_key(A)" width_weight="1"/>
		<cell text="S" action="send_key(S)" width_weight="1"/>
		<cell text="D" action="send_key(D)" width_weight="1"/>
