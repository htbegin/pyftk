<keyboard min_width="240" min_height="160" views="2">
<view rows="5" bg="key_board_bg.png" cell_bg_image[normal]="key_board_btn_normal.png" 
	cell_bg_image[active]="key_board_btn_active.png">
	<row cols="3" height_weight="10">
		<cell text="" action="candidate(prev)" width_weight="1" 
			icon="key_board_arrow_left.png"/>
		<cell text=""  action="candidate(text)" width_weight="8" 
			bg_image[normal]="key_board_candidates_area_bg.png" 
			bg_image[active]="key_board_candidate_hl_bg.png" />
		<cell text="" action="candidate(next)" width_weight="1"
			icon="key_board_arrow_right.png"/>
	</row>
	
	<row cols="10" height_weight="10">
		<cell text="Q" action="send_key(Q)" width_weight="1"/>
		<cell text="W" action="send_key(W)" width_weight="1"/>
		<cell text="E" action="send_key(E)" width_weight="1"/>
		<cell text="R" action="send_key(R)" width_weight="1"/>
		<cell text="T" action="send_key(T)" width_weight="1"/>
