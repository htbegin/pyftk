		<cell text="K" action="send_key(K)" width_weight="1"/>
		<cell text="L" action="send_key(L)" width_weight="1"/>
	</row>
	<row cols="8" height_weight="10">
		<cell text="Z" action="send_key(Z)" width_weight="1"/>
		<cell text="X" action="send_key(X)" width_weight="1"/>
		<cell text="C" action="send_key(C)" width_weight="1"/>
		<cell text="V" action="send_key(V)" width_weight="1"/>
		<cell text="B" action="send_key(B)" width_weight="1"/>
		<cell text="N" action="send_key(N)" width_weight="1"/>
		<cell text="M" action="send_key(M)" width_weight="1"/>
		<cell text="" action="send_key(BACKSPACE)" width_weight="1" icon="key_board_delete.png"/>
	</row>
	<row cols="5" height_weight="10">
		<cell text="ZH" action="switch_view(1,-1)" width_weight="1"/>
		<cell text="123." action="switch_view(1)" width_weight="1"/>
		<cell text=" " action="send_key( )" width_weight="1" icon="key_board_space.png"/>
		<cell text="" action="switch_view(1)" width_weight="1" icon="key_board_shift_off.png"/>
		<cell text="" action="send_key(ENTER)" width_weight="1" icon="key_board_enter.png"/>
	</row>
</view>

