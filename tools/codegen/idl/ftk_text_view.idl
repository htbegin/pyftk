	CStrPtr ftk_text_view_get_text(in FtkWidgetPtr thiz);
	Ret ftk_text_view_set_text(in FtkWidgetPtr thiz, in CStrPtr text);
	Ret ftk_text_view_insert_text(in FtkWidgetPtr thiz, in size_t pos, in CStrPtr text);
	Ret ftk_text_view_set_readonly(in FtkWidgetPtr thiz, in int ro);
